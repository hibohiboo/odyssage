    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "testcontainers": "^10.24.0",
    "vitest": "3.1.1",
    "wrangler": "^4.7.2"
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.5.2",
    "@odyssage/database": "workspace:*",
