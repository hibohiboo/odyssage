{
    "name": "odyssage",
    "private": true,
    "scripts": {
        "init": "git config --local core.hooksPath .githooks && echo Changed hooks directory when npm install",
        "local:db": "bash ./infra/local/neon/bin/up.sh",
        "local:firebase": "bash ./infra/local/firebase/bin/up.sh",
