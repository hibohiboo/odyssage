        "packages/*",
        "apps/*"
    ],
    "devDependencies": {
        "dependency-cruiser": "^16.8.0",
        "prettier": "^3.4.2",
        "turbo": "^2.3.3"
    },
    "packageManager": "bun@1.1.42"
}